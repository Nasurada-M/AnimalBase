# Server
PORT=3000
NODE_ENV=development

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=animalbase
DB_USER=postgres
DB_PASSWORD=yourpassword

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# File Upload
UPLOAD_PATH=uploads
MAX_FILE_SIZE=10485760

# Base URL (for building file URLs returned to client)
BASE_URL=http://10.0.2.2:3000

# Google Maps API Key (used for geocoding on backend if needed)
GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY

# Firebase (Push Notifications)
# Download serviceAccountKey.json from Firebase Console > Project Settings > Service Accounts
FIREBASE_SERVICE_ACCOUNT_PATH=./src/config/serviceAccountKey.json
